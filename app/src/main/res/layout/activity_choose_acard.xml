<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.root.cardsuitprediction.ChooseACardActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="@string/clubsButtonText"
            android:id="@+id/clubsbutton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:alpha="0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/heartsButtonText"
            android:id="@+id/heartsbutton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:alpha="0" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="@string/spadesButtonText"
            android:id="@+id/spadesbutton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:alpha="0" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="@string/diamondsButtonText"
            android:id="@+id/diamondsbutton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:alpha="0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/resetButtonText"
            android:id="@+id/resetbutton"
            android:layout_weight="1"
            android:alpha="0" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clubsImageView"
        android:src="@drawable/clubs"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:contentDescription="@string/heartsImageViewDescription" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heartsImageView"
        android:layout_centerInParent="true"
        android:src="@drawable/hearts"
        android:visibility="invisible"
        android:contentDescription="@string/heartsImageViewDescription" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spadesImageView"
        android:layout_centerInParent="true"
        android:src="@drawable/spades"
        android:contentDescription="@string/spadesImageViewDescription"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/diamondsImageView"
        android:layout_centerInParent="true"
        android:src="@drawable/diamonds"
        android:contentDescription="@string/diamondsImageViewDescription"
        android:visibility="invisible" />
</RelativeLayout>
